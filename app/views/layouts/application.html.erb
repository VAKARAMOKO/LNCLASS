<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= render 'layouts/partials/header_links' %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class=" bg-gray-200">
    <%= render "shared/nav/navbar" %>
    <div class="pt-16 md:m-2">
      <%= render 'layouts/partials/notices' %>
      <%= yield %>
    </div>
    <%= render 'layouts/partials/footer_links' %>
  </body>
</html>
