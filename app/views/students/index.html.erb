<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Matricule</th>
      <th>Matricule school</th>
      <th>Contact student 1</th>
      <th>Contact student 2</th>
      <th>Contact parent 1</th>
      <th>Contact parent 2</th>
      <th>Slug</th>
      <th>Classroom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.username %></td>
        <td><%= student.matricule %></td>
        <td><%= student.matricule_school %></td>
        <td><%= student.contact_student_1 %></td>
        <td><%= student.contact_student_2 %></td>
        <td><%= student.contact_parent_1 %></td>
        <td><%= student.contact_parent_2 %></td>
        <td><%= student.slug %></td>
        <td><%= student.classroom_id %></td>
        <td><%= link_to 'Show', student %></td>
        <td><%= link_to 'Edit', edit_student_path(student) %></td>
        <td><%= link_to 'Destroy', student, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to  new_classroom_student_path , class: " btn btn-outline-primary font-bold bbg-white" do%>
  New Student
<% end %>

