
<%= simple_form_for(model: [classroom, student], local: true) do |f| %>

  <div class="form-inputs">
    <%= f.input :username %>
    <%= f.input :matricule %>
    <%= f.input :matricule_school %>
    <%= f.input :contact_student_1 %>
    <%= f.input :contact_student_2 %>
    <%= f.input :contact_parent_1 %>
    <%= f.input :contact_parent_2 %>
    <%= f.input :slug %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
